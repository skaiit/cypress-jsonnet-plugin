{
  "branches": [
      {
          "name": "main"
      }
  ],
  "plugins": [
      [
          "@semantic-release/commit-analyzer",
          {   "preset": "eslint",
              "releaseRules": [
                  {
                      "tag": "Breaking",
                      "release": "major"
                  },
                  {
                      "tag": "Build",
                      "release": "minor"
                  },
                  {
                      "tag": "Chore",
                      "release": "minor"
                  },
                  {
                      "tag": "Fix",
                      "release": "patch"
                  },
                  {
                      "tag": "Security",
                      "release": "minor"
                  },
                  {
                      "tag": "New",
                      "release": "minor"
                  },
                  {
                      "tag": "Update",
                      "release": "minor"
                  },
                  {
                      "tag": "Upgrade",
                      "release": "minor"
                  }
              ]
          }
      ],
      [
          "@semantic-release/release-notes-generator",
          {   "preset": "eslint",
              "releaseRules": [
                  {
                      "tag": "Breaking",
                      "release": "major"
                  },
                  {
                      "tag": "Build",
                      "release": "minor"
                  },
                  {
                      "tag": "Chore",
                      "release": "minor"
                  },
                  {
                      "tag": "Fix",
                      "release": "patch"
                  },
                  {
                    "tag": "fix",
                    "release": "patch"
                  },
                  {
                      "tag": "New",
                      "release": "minor"
                  },
                  {
                      "tag": "Update",
                      "release": "minor"
                  },
                  {
                      "tag": "Upgrade",
                      "release": "minor"
                  },
                  {
                      "tag": "Security",
                      "release": "minor"
                  }
              ]
          }
      ],
      [
          "@semantic-release/changelog",
          {
              "changelogFile": "CHANGELOG.md"
          }
      ],
      [ 
        "@semantic-release/github",
        {   
            "successComment": false,
            "assets": [
                {
                    "path": "src/publish/publish-app.zip",
                    "label": "platform-device-mock_v${nextRelease.version}.zip",
                    "name": "platform-device-mock_v${nextRelease.version}.zip"
                }
            ]
            }],
      [
          "@semantic-release/git",
          {
              "assets": [
                  "package.json",
                  "CHANGELOG.md"
              ],
              "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
          }
      ],
      "@semantic-release/exec",
      {
          "successCmd": "echo \"RELEASE_VERSION=${nextRelease.version}\" >> $GITHUB_ENV"
      }
  ]
}
